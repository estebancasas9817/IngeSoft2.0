<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffae00"
    tools:context=".ClasesPrincipales.RutinasPersonalizadas"
    android:id="@+id/drawer_layout">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/navigationTheme"
        android:background="#d8e6de"
        android:layout_gravity="start"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#ffae00"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="#ffae00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/app_name"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="RUTINAS PERSONALIZADAS"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />
        </RelativeLayout>

        <ScrollView
            android:background="#ffae00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!---INICIO LINEAR LAYOUT PRINCIPIANTE -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EJERCICIOS DE PECHO"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:textAllCaps="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver todas"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/EjerPecho1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EJERCICIO DE PECHO 1"
                                android:textColor="#000000"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/fitUnoDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="3 To 13 Minutes"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fitDos"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fitone"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fitDosTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RUTINA 2"
                                android:textColor="#000000"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/fitDosDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 To 14 Minutes"
                                android:layout_marginTop="5dp"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fitTres"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fittwo"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fitTresTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RUTINA 3"
                                android:textColor="#000000"
                                android:textSize="17sp"/>

                            <TextView
                                android:id="@+id/fitTresDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 To 15 Minutes"
                                android:layout_marginTop="5dp"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <!---FIN LINEAR LAYOUT PRINCIPIANES -->




                </LinearLayout>

                <!---INICIO LINEAR LAYOUT INTERMEDIO -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EJERCICIOS ABODMEN"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:textAllCaps="true"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fitCuatroTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EJERCICIO ABODMEN 1"
                                android:textColor="#000000"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/fitCuatroDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="3 To 13 Minutes"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fitCinco"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fitone"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fitCincoTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RUTINA 5"
                                android:textColor="#000000"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/fitCincoDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 To 14 Minutes"
                                android:layout_marginTop="5dp"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fitSeis"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fittwo"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fitSeisTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RUTINA 6"
                                android:textColor="#000000"
                                android:textSize="17sp"/>

                            <TextView
                                android:id="@+id/fitSeisDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 To 15 Minutes"
                                android:layout_marginTop="5dp"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- FIN LINEAR LAYOUT INTERMEDIO -->

                </LinearLayout>

                <!-- INICIO LINEAR LAYOUT AVANZADO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OBJETIVOS 1AVANZADOS"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:textAllCaps="true"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fitSieteTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RUTINA 7"
                                android:textColor="#000000"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/fitSieteDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="3 To 13 Minutes"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fitOcho"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fitone"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fitOchoTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RUTINA 8"
                                android:textColor="#000000"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/fit8Desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 To 14 Minutes"
                                android:layout_marginTop="5dp"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fitNueve"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fittwo"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="24dp">

                        <ImageView
                            android:src="@drawable/abs2"
                            android:layout_width="110dp"
                            android:layout_height="70dp"/>

                        <LinearLayout
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fitNueveTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RUTINA 9"
                                android:textColor="#000000"
                                android:textSize="17sp"/>

                            <TextView
                                android:id="@+id/fitNueveDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 To 15 Minutes"
                                android:layout_marginTop="5dp"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                />

                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>


